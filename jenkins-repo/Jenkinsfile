pipeline {
    agent any
    stages {
        stage('Generate Terraform Code') {
            steps {
                // FIX: Tell Jenkins to run the commands inside this directory
                dir('jenkins-repo') {
                    sh 'python3 main.py'
                }
            }
        }
        stage('Commit to Git') {
            steps {
                dir('jenkins-repo') {
                    sh 'git config --global user.email "jenkins@example.com"'
                    sh 'git config --global user.name "Jenkins"'
                    sh 'git add main.tf'
                    sh 'git commit -m "Auto-generate Terraform code" || true'
                }
            }
        }
        stage('Deploy with Terraform') {
            steps {
                dir('jenkins-repo') {
                    withCredentials([aws(credentialsId: 'aws-creds')]) {
                        sh 'terraform init'
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
    }
}
